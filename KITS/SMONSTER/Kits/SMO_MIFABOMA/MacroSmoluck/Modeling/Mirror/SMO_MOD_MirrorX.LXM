tool.set *.mirror on
#Command Block Begin:  ToolAdjustment
   tool.setAttr gen.mirror frot axis
   tool.setAttr gen.mirror cenX 0.0
   tool.setAttr gen.mirror cenY 0.0
   tool.setAttr gen.mirror cenZ 0.0
   tool.setAttr gen.mirror axis 0
   tool.setAttr gen.mirror leftX 0.0
   tool.setAttr gen.mirror leftY 1
   tool.setAttr gen.mirror leftZ 0.0
   tool.setAttr gen.mirror upX 0.0
   tool.setAttr gen.mirror upY 0.0
   tool.setAttr gen.mirror upZ 1
#Command Block End:  ToolAdjustment
tool.doApply